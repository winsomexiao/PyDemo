QWidget{
    background: #D3D3D3;
    border: 5px;
    border-style: solid;
}

QMainWindow{
    background: #D3D3D3;
    border: 5px;
    border-style: solid;
}

QMainWindow::separator {
    background: yellow;
    width:10px;
    height:10px;
}

QMainWindow::separator:hover {
    background: red;
}

QPushButton{
    width: 25px;
    height: 25px;
    border-image: url(icons/search.png);
}

QPushButton#searchBtn::hover{
    width: 25px;
    height: 25px;
    border-image: url(icons/search_hover.png);
}

QPushButton#exit, QPushButton#mini, QPushButton#maxi{
    color: gray;
    font-family: "Yahei consolas Hybrid";
    font-weight: bold;
    font-size: 30px;
    border: 0px;
}

QPushButton#login{
    border: 0px;
    font-family: "Yahei consolas Hybrid";
    font-weight: bold;
    color: #BABABA;
}

QPushButton#logins{
    font-family: "Yahei consolas Hybrid";
    font-weight: bold;
    color: black;
}

QPushButton#login::hover, QPushButton#exit::hover, QPushButton#mini::hover, QPushButton#maxi::hover{
    color: white;
}

QPushButton#find, QPushButton#locale{
   border: 5px;
   background-color: #D3D3D3;
   border-radius: 5px;
   font: bold;

}

QPushButton#find::hover, QPushButton#locale::hover{
   border: 5px;
   background-color: gray;
   border-radius: 5px;
   font-weight: bold;
}

QPushButton#find::focus, QPushButton#locale::focus{
   border: 5px;
   background-color: gray;
   border-radius: 5px;
   font-weight: bold;
   color: #E6E8FA;
}

QPushButton#play{
    border-image: url(icons/play.png);
    border: 0px solid;
    width: 48px;
    height: 48px;
}

QPushButton#play::hover{
    border-image: url(icons/play_hover.png);
    border: 0px solid;
    width: 48px;
    height: 48px;
}

QPushButton#stop{
    border-image: url(icons/stop.png);
    border: 0px solid;
    width: 36px;
    height: 36px;
}

QPushButton#stop::hover{
    border-image: url(icons/stop_hover.png);
    border: 0px solid;
    width: 36px;
    height: 36px;
}

QPushButton#pause{
    border-image: url(icons/pause.png);
    border: 0px solid;
    width: 48px;
    height: 48px;
}

QPushButton#pause::hover{
    border-image: url(icons/pause_hover.png);
    border: 0px solid;
    width: 48px;
    height: 48px;
}


QPushButton#next{
    border-image: url(icons/next.png);
    border: 0px solid;
    width: 36px;
    height: 36px;
}

QPushButton#next::hover{
    border-image: url(icons/next_hover.png);
    border: 0px solid;
    width: 36px;
    height: 36px;
}

QPushButton#before{
    border-image: url(icons/before.png);
    border: 0px solid;
    width: 36px;
    height: 36px;
}

QPushButton#before::hover{
    border-image: url(icons/before_hover.png);
    border: 0px solid;
    width: 36px;
    height: 36px;
}

QPushButton#cycle{
    border-image: url(icons/cycle_1.png);
    border: 0px solid;
    width: 16px;
    height: 16px;

}

QPushButton#cycle::hover{
    border-image: url(icons/cycle_hover.png);
    border: 0px solid;
    width: 16px;
    height: 16px;

}

QPushButton#single{
    border-image: url(icons/single_1.png);
    border: 0px solid;
    width: 16px;
    height: 16px;
}

QPushButton#single::hover{
    border-image: url(icons/single_hover.png);
    border: 0px solid;
    width: 16px;
