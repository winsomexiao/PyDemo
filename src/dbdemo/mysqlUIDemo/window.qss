}

QPushButton#songslist{
    width: 24px;
    height: 24px;
    border-image: url(icons/list.png);
}

QPushButton#songslist:hover{
    border-image: url(icons/list_hover.png)
}

QLabel{
    font-family: "Yahei consolas Hybrid";
    font-weight: bold;
}

QLabel#headpic{
    border: 5px solid;
    border-radius: 25px;
}

QLabel#Headerhr{
    border: 5px;
    border-width: 3px;
    border-style: solid;
    border-top-color: qradialgradient(spread:pad, cx:0.7, cy:0.5, radius:1, fx:0.7, fy:0.5,
stop:0.1 #000000, stop:1 #CD0000);
    border-left-color: #222222;
    border-right-color: #222222;
    border-bottom-color: #222222;
    color: gray;
}

QLabel#songlist{
    border: 5px;
    border-width: 1px;
    border-style: solid;
    border-top-color: #222222;
    border-left-color: #222222;
    border-right-color: #222222;
    border-bottom-color: #222222;
    color: gray;
}

QLabel#HText{
    color: white;
    font-size: 33px;
}

QLabel#spacing1{
    border: 1px solid;
    border-width: 2px;
    border-top-color: #222222;
    border-left-color: #222222;
    border-bottom-color: #222222;
    border-right-color: #000000;

}

QLabel#spacing2{
    border: 1px solid;
    border-width: 2px;
    border-top-color: #222222;
    border-right-color: #222222;
    border-bottom-color: #222222;
    border-left-color: #000000;
}

QLabel#title1{
    color: gray;
}

QLabel#pic{
    background: #FFFFFF;
    border: 0px solid;
    padding: 10px;
}
QLabel#name{
    color: white;
    font-size: 15px;
}
QLabel#tag, QLabel#author, QLabel#description{
    color: lightgray;
}

QLabel#time1{
    color: white;
    font-weight: bold;
}

QLabel#time2{
    color: white;
    font-weight: bold;

}

QLabel#songname{
    text-align: center;
    color: white;
    font-weight: bold;
}

QLineEdit#SearchLine{
    background: #000000;
    border: 5px solid;
    border-radius: 10px;
    font-weight: bold;
    color: gray;
}

QLineEdit#SearchLine::active{
    width: 200px;
    background: #000000;
    border: 5px solid;
    border-radius: 10px;
    color: gray;
}

QTableWidget::item:hover{
    outline: #363636;
    outline-style: none;
    background-color: #BFEFFF;
    color: #000000;
}

QTableView::item:selected{
    outline: #363636;
    outline-style: none;
    background-color: #BFEFFF;
    color: #000000;
}

QTableView#{
    background-color: #000000;
    border: 5px solid;
    border-bottom: 0px;
    border-left: 0px;
    border-right: 0px;
    color: white;

}

QTableView::item{
    outline: #363636;
    outline-style: none;
    border: 0px solid #363636;
    background-color: #000000;
    color: #D6D6D6;
    border-radius: 8px;
    selection-background-color: #993333;
}

QHeaderView::section{
    background-color: #000000;
    color: white;
}

QHeaderView{
    background-color: #000000;
    color: white;
}

QScrollBar:vertical{
    background: #363636;
    width: 7px;
    margin: 0px 0 0px 0;
}

QScrollBar:horizontal{
    background: #363636;
    width: 7px;
    margin: 0 0 0 0;
}

QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: lightgray;
    min-height: 20px;
    margin: 0 0 0 0;
    border-radius: 3px;
    border: none;
}

QScrollBar::handle:hover{
    background: gray;
    min-height: 20px;
    margin: 0 0 0 0;
    border-radius: 3px;
    border: none;
}

QScrollBar::add-line:vertical, QScrollBar::add-line:horizontal {
    background: #363636;
    height: 0px;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical, QScrollBar::sub-line:horizontal {
    background: #363636;
    height: 0px;
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical, QScrollBar::up-arrow:horizontal, QScrollBar::down-arrow:horizontal {
    border: 1px solid grey;
    width: 3px;
    height: 3px;
    background: white;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical, QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

QSlider#slider::groove:horizontal{
    height: 5px;
    width: 500px;
    background: #C0C0C0;
    border: 1px solid;
    border-radius: 2px;
    padding-left: -1px;
    padding-right: -1px;
    margin: 2px 0;
}

QSlider#slider::sub-page:horizontal{
    background: #CD0000;
    border: 1px solid;
    border-radius: 2px;
}

QSlider#slider::add-page:horizontal{
    background: #C0C0C0;
    border: 0px solid;
    border-radius: 2px;
}

QSlider#slider::handle:horizontal{
    background: qradialgradient(spread:pad, cx:0.5, cy:0.5, radius:0.2, fx:0.5, fy:0.5,
    stop:0.7 #CD0000, stop:0.8 #ABABAB);
    width: 18px;
    border-radius: 8px;
    margin-top: -6px;
    margin-bottom: -6px;
}

QSlider#slider::handle:horizontal:hover{
    background: qradialgradient(spread:pad, cx:0.5, cy:0.5, radius:0.2, fx:0.5, fy:0.5,
    stop:0.7 #CD0000, stop:0.8 #FFFFFF);
    width: 18px;
    border-radius: 8px;
    margin-top: -6px;
    margin-bottom: -6px;
}

QDialog{
    background: white;
    border-radius: 10px;
    padding: 5px;
}
